<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(TestInfraTargetFramework)</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyName>TestUtils</AssemblyName>
    <PackageId>TestUtils</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <!-- Exclude runtime assets. HostModel uses OOB packages and the test just wants what is in the framework -->
    <ProjectReference Include="..\..\managed\Microsoft.NET.HostModel\Microsoft.NET.HostModel.csproj" ExcludeAssets="runtime" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="$(FluentAssertionsVersion)" />
    <PackageReference Include="Microsoft.DotNet.XUnitExtensions" Version="$(MicrosoftDotNetXUnitExtensionsVersion)" />
    <PackageReference Include="xunit.core" Version="$(XUnitVersion)" ExcludeAssets="build" />
    <!-- Exclude runtime assets. DependencyModel uses OOB packages and the test just wants what is in the framework -->
    <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="$(MicrosoftExtensionsDependencyModelVersion)" ExcludeAssets="runtime"/>
  </ItemGroup>

</Project>
